---
const today = new Date();
import { css } from "styled-system/css";
import { hstack } from "styled-system/patterns";
import { Icon } from "astro-icon/components";
---

<footer
  class={css({
    padding: "2em 1em 2em 1em",
    background: "linear-gradient(var(--gray-gradient)) no-repeat",
    color: "rgb(var(--gray))",
    textAlign: "center",
    borderTop: "1px solid {colors.border}",
    borderRadius: "1rem",
    marginTop: "2em",
  })}
>
  <div class={css({ marginBottom: "1em" })}>
    &copy; {today.getFullYear()} m01nm01n. All rights reserved.
  </div>
  <div
    class={hstack({
      justifyContent: "center",
      gap: "1.5em",
      flexWrap: "wrap",
    })}
  >
    <a
      href="https://github.com/m01nm01n"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="m01nm01n GitHub Organization"
      class={css({
        color: "rgb(var(--gray))",
        _hover: { color: "accent" },
        transition: "color 0.2s ease",
        display: "flex",
        alignItems: "center",
        gap: "0.5em",
      })}
    >
      <Icon name="fa6-brands:github" />
      <span>GitHub</span>
    </a>
    <a
      href="https://ctftime.org/team/307389/"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="m01nm01n CTFtime Page"
      class={css({
        color: "rgb(var(--gray))",
        _hover: { color: "accent" },
        transition: "color 0.2s ease",
        display: "flex",
        alignItems: "center",
        gap: "0.5em",
      })}
    >
      <Icon name="mdi:flag" />
      <span>CTFtime</span>
    </a>
  </div>
</footer>

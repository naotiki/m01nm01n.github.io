---
import { Image } from "astro:assets";
import { css } from "styled-system/css";
import m01n from "../assets/m01nm01n-logo.png";
---

<div class={css({ position: "relative",})}>
  <div
    class={css({
      position: "absolute",
      top: 0,
      left: 0,
      width: "100%",
      height: "100vh",
      zIndex: -1,
      "&::after": {
        content: '""',
        position: "absolute",
        top: 0,
        left: 0,
        width: "100%",
        height: "100%",
        backgroundColor: "rgba(0, 0, 0, 0.6)",
        borderRadius: "1rem",
        backdropFilter: "blur(5px)",
      },
    })}
  >
    <Image
      src={m01n}
      alt={"m01nm01n"}
      decoding="async"
      loading="lazy"
      class={css({
        width: "100%",
        height: "100%",
        objectFit: "contain",
      })}
    />
  </div>
  <div
    class={css({
      display: "flex",
      flexDirection: "column",
      justifyContent: "center",
      alignItems: "center",
      height: "100vh",
      position: "relative",
      zIndex: 1,
    })}
  >
    <h1
      class={css({
        whiteSpace: "break-spaces",
        fontSize: "5rem",
        fontWeight: "bold",
        textAlign: "center",
        color: "white",
        textShadow: "0 0 10px rgba(0, 0, 0, 0.5)",
        margin: 0,
      })}
    >
      ðŸ‘‹ M01n m01n!!
    </h1>
  </div>
</div>
